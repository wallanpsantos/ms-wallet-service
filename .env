# ==================== SPRING CONFIGURATION ====================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ==================== MONGODB CONFIGURATION ====================
MONGO_URL=mongodb://admin:admin123@localhost:27017/wallet_db?authSource=admin
MONGO_USER=admin
MONGO_PASS=admin123
MONGO_DB=wallet_db
MONGO_PORT=27017

# ==================== KAFKA/REDPANDA CONFIGURATION ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_PORT=9092

# Kafka Producer Settings
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=5
KAFKA_PRODUCER_COMPRESSION=snappy
KAFKA_PRODUCER_DELIVERY_TIMEOUT=120000
KAFKA_PRODUCER_BUFFER_MEMORY=33554432
KAFKA_PRODUCER_MAX_REQUEST_SIZE=1048576

# Kafka Consumer Settings
KAFKA_CONSUMER_GROUP_ID=wallet-service-group
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_CONSUMER_MAX_POLL_RECORDS=10
KAFKA_CONSUMER_FETCH_MIN_SIZE=1024
KAFKA_CONSUMER_FETCH_MAX_WAIT=500
KAFKA_CONSUMER_SESSION_TIMEOUT=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL=10000
KAFKA_CONSUMER_MAX_POLL_INTERVAL=300000

# Kafka Listener Settings
KAFKA_LISTENER_CONCURRENCY=3
KAFKA_LISTENER_POLL_TIMEOUT=3000

# ==================== REDPANDA SPECIFIC (DEV) ====================
REDPANDA_ADMIN_PORT=9644
REDPANDA_CONSOLE_PORT=8090

# ==================== MONGO EXPRESS (DEV) ====================
MONGO_EXPRESS_PORT=8081
ME_USER=admin
ME_PASS=admin123

# ==================== LOGGING CONFIGURATION ====================
LOGGING_LEVEL_COM_BR=DEBUG
LOGGING_LEVEL_KAFKA=INFO
LOGGING_LEVEL_APACHE_KAFKA=WARN
LOGGING_LEVEL_MONGODB=INFO
LOGGING_LEVEL_TRANSACTION=INFO
LOG_DATEFORMAT_PATTERN=yyyy-MM-dd HH:mm:ss.SSS
LOG_FILE=logs/wallet-service.log

# ==================== ACTUATOR CONFIGURATION ====================
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
ACTUATOR_BASE_PATH=/actuator
ACTUATOR_HEALTH_SHOW_DETAILS=always
ACTUATOR_HEALTH_SHOW_COMPONENTS=always
ACTUATOR_HEALTH_MONGO_ENABLED=true
ACTUATOR_HEALTH_KAFKA_ENABLED=true
ACTUATOR_INFO_ENV_ENABLED=true
ACTUATOR_INFO_JAVA_ENABLED=true
ACTUATOR_INFO_BUILD_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true

# ==================== WALLET BUSINESS CONFIGURATION ====================
WALLET_MAX_TRANSACTION_AMOUNT=1000000.00
WALLET_SUPPORTED_CURRENCIES=BRL,USD,EUR
WALLET_TRANSACTION_TIMEOUT=30s
WALLET_MIN_TRANSACTION_AMOUNT=0.01

# ==================== OUTBOX PATTERN CONFIGURATION ====================
WALLET_OUTBOX_SCHEDULER_ENABLED=true
WALLET_OUTBOX_SCHEDULER_DELAY=5000
WALLET_OUTBOX_SCHEDULER_INITIAL_DELAY=10000
WALLET_OUTBOX_BATCH_SIZE=100
WALLET_OUTBOX_MAX_RETRIES=3

# ==================== KAFKA TOPICS CONFIGURATION ====================
WALLET_KAFKA_TOPIC_EVENTS=wallet-events
WALLET_KAFKA_TOPIC_EVENTS_PARTITIONS=3
WALLET_KAFKA_TOPIC_EVENTS_REPLICAS=1
WALLET_KAFKA_TOPIC_OUTBOX=wallet-outbox
WALLET_KAFKA_TOPIC_OUTBOX_PARTITIONS=3
WALLET_KAFKA_TOPIC_OUTBOX_REPLICAS=1
WALLET_KAFKA_CONSUMER_CONCURRENCY=3
WALLET_KAFKA_CONSUMER_MAX_POLL_RECORDS=10

# ==================== AUDIT CONFIGURATION ====================
WALLET_AUDIT_ENABLED=true

# ==================== CACHE CONFIGURATION (FUTURE) ====================
WALLET_CACHE_ENABLED=false
WALLET_CACHE_TTL=300s
WALLET_CACHE_MAX_SIZE=1000

# ==================== DOCKER COMPOSE CONFIGURATION ====================
DOCKER_COMPOSE_ENABLED=false

# ==================== DEVELOPMENT/PRODUCTION OVERRIDES ====================
# Para ambiente Docker, descomente e ajuste:
# SPRING_PROFILES_ACTIVE=docker
# LOGGING_LEVEL_COM_BR=INFO
# WALLET_OUTBOX_SCHEDULER_INITIAL_DELAY=15000

# Para ambiente de Produção, descomente e ajuste:
# SPRING_PROFILES_ACTIVE=prod
# WALLET_MAX_TRANSACTION_AMOUNT=10000000.00
# WALLET_OUTBOX_SCHEDULER_INITIAL_DELAY=30000
# WALLET_OUTBOX_BATCH_SIZE=50
# LOGGING_LEVEL_COM_BR=INFO